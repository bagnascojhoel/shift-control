{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@assets": ["assets"],
      "@global-styles": ["global-styles.ts"],
      "@model": ["model"],
      "@components": ["components"],
      "@utils": ["utils"],
      "@errors": ["errors"]
    }
  }
}
